<h1>Create a new article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>

  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %><br/>
  </p>

<% end %>